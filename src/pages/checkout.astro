---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getCurrentLanguage, t } from '../utils/translations';

const currentLanguage = getCurrentLanguage();

// Base path helper for GitHub Pages deployment
const base = import.meta.env.BASE_URL.replace(/\/$/, '');
const createUrl = (path: string) => base === '/' ? `/${path}/` : `${base}/${path}/`;
const createAssetUrl = (path: string) => base === '/' ? path : `${base}${path}`;
---

<Layout title={`${t('checkoutTitle')} â€“ Angelina's Flower Farm`}>
  <Header />
  
  <!-- Fixed Background Image with Overlay -->
  <div class="fixed inset-0 -z-10">
    <img src={createAssetUrl('/flower-background.jpg')} alt="Flower farm field" class="w-full h-full object-cover">
    <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
  </div>

  <main class="pt-20 py-8">
    <div class="container mx-auto px-4 max-w-4xl">
      <!-- Checkout Header -->
      <div class="text-center mb-8">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-4 drop-shadow-2xl" data-i18n="checkoutTitle">
          {t('checkoutTitle', currentLanguage)}
        </h1>
      </div>

      <!-- Checkout Form Container -->
      <div class="bg-white/95 backdrop-blur-sm rounded-xl shadow-xl p-6 md:p-8">
        
        <!-- Success Message (hidden by default) -->
        <div id="success-message" class="hidden mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
          <h3 class="font-bold mb-2" data-i18n="orderSuccess">{t('orderSuccess', currentLanguage)}</h3>
          <p data-i18n="orderConfirmation">{t('orderConfirmation', currentLanguage)}</p>
        </div>

        <!-- Checkout Form -->
        <form id="checkout-form" class="grid gap-8 lg:grid-cols-3">
          
          <!-- Customer Information (2 columns) -->
          <div class="lg:col-span-2 space-y-6">
            
            <!-- Customer Info Section -->
            <section>
              <h2 class="text-xl font-semibold text-gray-900 mb-4" data-i18n="customerInfo">
                {t('customerInfo', currentLanguage)}
              </h2>
              
              <div class="grid gap-4 sm:grid-cols-2">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">
                    <span data-i18n="firstName">{t('firstName', currentLanguage)}</span>
                    <span class="text-red-600">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  >
                  <div class="text-red-600 text-sm mt-1 hidden" id="firstName-error"></div>
                </div>
                
                <div>
                  <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">
                    <span data-i18n="lastName">{t('lastName', currentLanguage)}</span>
                    <span class="text-red-600">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  >
                  <div class="text-red-600 text-sm mt-1 hidden" id="lastName-error"></div>
                </div>
              </div>
              
              <div class="grid gap-4 sm:grid-cols-2 mt-4">
                <div>
                  <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                    <span data-i18n="checkoutEmail">{t('checkoutEmail', currentLanguage)}</span>
                    <span class="text-red-600">*</span>
                  </label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  >
                  <div class="text-red-600 text-sm mt-1 hidden" id="email-error"></div>
                </div>
                
                <div>
                  <label for="phone" class="block text-sm font-medium text-gray-700 mb-1" data-i18n="checkoutPhone">
                    {t('checkoutPhone', currentLanguage)}
                  </label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone"
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  >
                </div>
              </div>
            </section>

            <!-- Shipping Address Section -->
            <section>
              <h2 class="text-xl font-semibold text-gray-900 mb-4" data-i18n="shippingAddress">
                {t('shippingAddress', currentLanguage)}
              </h2>
              
              <div class="space-y-4">
                <div>
                  <label for="address" class="block text-sm font-medium text-gray-700 mb-1">
                    <span data-i18n="streetAddress">{t('streetAddress', currentLanguage)}</span>
                    <span class="text-red-600">*</span>
                  </label>
                  <input 
                    type="text" 
                    id="address" 
                    name="address" 
                    required
                    class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                  >
                  <div class="text-red-600 text-sm mt-1 hidden" id="address-error"></div>
                </div>
                
                <div class="grid gap-4 sm:grid-cols-3">
                  <div>
                    <label for="city" class="block text-sm font-medium text-gray-700 mb-1">
                      <span data-i18n="city">{t('city', currentLanguage)}</span>
                      <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="city" 
                      name="city" 
                      required
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    >
                    <div class="text-red-600 text-sm mt-1 hidden" id="city-error"></div>
                  </div>
                  
                  <div>
                    <label for="state" class="block text-sm font-medium text-gray-700 mb-1">
                      <span data-i18n="state">{t('state', currentLanguage)}</span>
                      <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="state" 
                      name="state" 
                      required
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    >
                    <div class="text-red-600 text-sm mt-1 hidden" id="state-error"></div>
                  </div>
                  
                  <div>
                    <label for="zipCode" class="block text-sm font-medium text-gray-700 mb-1">
                      <span data-i18n="zipCode">{t('zipCode', currentLanguage)}</span>
                      <span class="text-red-600">*</span>
                    </label>
                    <input 
                      type="text" 
                      id="zipCode" 
                      name="zipCode" 
                      required
                      class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                    >
                    <div class="text-red-600 text-sm mt-1 hidden" id="zipCode-error"></div>
                  </div>
                </div>
              </div>
            </section>
          </div>

          <!-- Order Summary Sidebar (1 column) -->
          <div class="lg:col-span-1">
            <div class="bg-gray-50 rounded-lg p-6 sticky top-24">
              <h2 class="text-xl font-semibold text-gray-900 mb-4" data-i18n="orderSummary">
                {t('orderSummary', currentLanguage)}
              </h2>
              
              <!-- Cart Items -->
              <div id="checkout-items" class="space-y-3 mb-4">
                <!-- Items will be populated by JavaScript -->
              </div>
              
              <!-- Order Total -->
              <div class="border-t pt-4 space-y-2">
                <div class="flex justify-between text-sm">
                  <span data-i18n="subtotal">{t('subtotal', currentLanguage)}:</span>
                  <span id="checkout-subtotal">$0.00</span>
                </div>
                <div class="flex justify-between font-semibold text-lg border-t pt-2">
                  <span data-i18n="total">{t('total', currentLanguage)}:</span>
                  <span id="checkout-total">$0.00</span>
                </div>
              </div>
              
              <!-- Payment Note -->
              <div class="mt-6 p-4 bg-blue-50 rounded-lg">
                <p class="text-sm text-blue-800" data-i18n="paymentNote">
                  {t('paymentNote', currentLanguage)}
                </p>
              </div>
              
              <!-- Action Buttons -->
              <div class="mt-6 space-y-3">
                <button 
                  type="submit" 
                  id="place-order-btn"
                  class="w-full bg-green-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-green-700 transition-colors"
                  data-i18n="placeOrder"
                >
                  {t('placeOrder', currentLanguage)}
                </button>
                
                <a 
                  href={createUrl('cart')}
                  class="block w-full text-center border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors"
                  data-i18n="backToCart"
                >
                  {t('backToCart', currentLanguage)}
                </a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </main>

  <script>
    import { CartManager } from '../utils/cart';
    import { getCurrentLanguage, t } from '../utils/translations';

    class CheckoutPage {
      private currentLanguage: string;

      constructor() {
        this.currentLanguage = getCurrentLanguage();
        this.init();
      }

      init() {
        this.populateOrderSummary();
        this.setupFormValidation();
        this.setupLanguageUpdates();
        
        // Redirect to cart if empty
        if (CartManager.getItemCount() === 0) {
          const base = document.querySelector('meta[name="astro-base"]')?.getAttribute('content') || '';
          const createUrl = (path: string) => base === '/' ? `/${path}/` : `${base}/${path}/`;
          window.location.href = createUrl('cart');
          return;
        }
      }

      populateOrderSummary() {
        const items = CartManager.getCart();
        const itemsContainer = document.getElementById('checkout-items');
        const subtotalElement = document.getElementById('checkout-subtotal');
        const totalElement = document.getElementById('checkout-total');

        if (!itemsContainer || !subtotalElement || !totalElement) return;

        // Populate items
        itemsContainer.innerHTML = items.map(item => `
          <div class="flex justify-between items-center">
            <div class="flex-1">
              <div class="text-sm font-medium">${item.name}</div>
              <div class="text-xs text-gray-500">Qty: ${item.quantity}</div>
            </div>
            <div class="text-sm font-semibold">$${(item.price * item.quantity).toFixed(2)}</div>
          </div>
        `).join('');

        // Update totals
        const total = CartManager.getTotal();
        subtotalElement.textContent = `$${total.toFixed(2)}`;
        totalElement.textContent = `$${total.toFixed(2)}`;
      }

      setupFormValidation() {
        const form = document.getElementById('checkout-form') as HTMLFormElement;
        if (!form) return;

        form.addEventListener('submit', (e) => {
          e.preventDefault();
          
          if (this.validateForm()) {
            this.submitOrder();
          }
        });

        // Real-time validation
        const requiredFields = ['firstName', 'lastName', 'email', 'address', 'city', 'state', 'zipCode'];
        requiredFields.forEach(fieldName => {
          const field = document.getElementById(fieldName) as HTMLInputElement;
          if (field) {
            field.addEventListener('blur', () => this.validateField(fieldName));
          }
        });
      }

      validateForm(): boolean {
        const requiredFields = ['firstName', 'lastName', 'email', 'address', 'city', 'state', 'zipCode'];
        let isValid = true;

        requiredFields.forEach(fieldName => {
          if (!this.validateField(fieldName)) {
            isValid = false;
          }
        });

        return isValid;
      }

      validateField(fieldName: string): boolean {
        const field = document.getElementById(fieldName) as HTMLInputElement;
        const errorElement = document.getElementById(`${fieldName}-error`);
        
        if (!field || !errorElement) return true;

        let isValid = true;
        let errorMessage = '';

        // Check if required field is empty
        if (field.hasAttribute('required') && !field.value.trim()) {
          isValid = false;
          errorMessage = t('required', this.currentLanguage as 'en' | 'pt');
        }

        // Email validation
        if (fieldName === 'email' && field.value.trim()) {
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!emailRegex.test(field.value.trim())) {
            isValid = false;
            errorMessage = t('invalidEmail', this.currentLanguage as 'en' | 'pt');
          }
        }

        // Show/hide error
        if (!isValid) {
          errorElement.textContent = errorMessage;
          errorElement.classList.remove('hidden');
          field.classList.add('border-red-500');
        } else {
          errorElement.classList.add('hidden');
          field.classList.remove('border-red-500');
        }

        return isValid;
      }

      submitOrder() {
        const form = document.getElementById('checkout-form') as HTMLFormElement;
        const submitBtn = document.getElementById('place-order-btn') as HTMLButtonElement;
        const successMessage = document.getElementById('success-message');

        if (!form || !submitBtn || !successMessage) return;

        // Disable submit button
        submitBtn.disabled = true;
        submitBtn.textContent = 'Processing...';

        // Simulate order processing
        setTimeout(() => {
          // Clear cart
          CartManager.clearCart();
          
          // Show success message
          form.classList.add('hidden');
          successMessage.classList.remove('hidden');
          
          // Scroll to top
          window.scrollTo({ top: 0, behavior: 'smooth' });
          
          // Redirect to home after 5 seconds
          setTimeout(() => {
            const base = document.querySelector('meta[name="astro-base"]')?.getAttribute('content') || '';
            window.location.href = base === '/' ? '/' : base;
          }, 5000);
        }, 2000);
      }

      setupLanguageUpdates() {
        window.addEventListener('languageChanged', () => {
          this.currentLanguage = getCurrentLanguage();
          this.populateOrderSummary();
        });
      }
    }

    // Initialize checkout page
    new CheckoutPage();
  </script>
</Layout>